@inherits LayoutComponentBase
@using BlazorBowling
@inject DebugStatus DebugStatus
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://github.com/Keilwertm/BlazorBowling" target="_blank">GitHub</a>
        </div>

        @if (!string.IsNullOrWhiteSpace(DebugStatus?.Message))
        {
            <div class="debug-banner @(DebugStatus.ChecksPassed ? "debug-success" : "debug-error")">
                @if (DebugStatus.ChecksPassed)
                {
                    <span>✅ @DebugStatus.Message</span>
                }
                else
                {
                    <span>❌ @DebugStatus.Message</span>
                }
            </div>
        }

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>